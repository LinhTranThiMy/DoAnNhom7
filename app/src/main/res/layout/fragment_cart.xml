<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CartFragment"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cvshoppingcartempty"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#F3F3F3"
        app:cardCornerRadius="150dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/shopping_cart"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtTitleShoppingCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvshoppingcartempty"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="serif"
        android:text="Your shopping cart is empty"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleShoppingCart"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Find amazing cases and accessories for your lovely phone."
        android:textSize="12sp" />
</RelativeLayout>