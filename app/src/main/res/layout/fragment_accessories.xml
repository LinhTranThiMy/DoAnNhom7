<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarmain"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9E0031">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAccesories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="serif"
            android:text="Accesories"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_filter"
            android:textColor="#919191"
            android:backgroundTint="@color/white"
            android:text="Filter"
            android:layout_marginStart="120dp"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutAccesories"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#9D1B34"
        app:tabIndicatorColor="#9D1B34"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabMode="scrollable"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="535dp">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerAccesories"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>



</LinearLayout>